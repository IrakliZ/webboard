<% provide(:title, 'Sign up') %>

<div class="row">
	<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 panel panel-default">
		<div class="signup-form">
			<h1>Sign up</h1>
			<%= form_for(@user) do |u| %>
				<%= render 'shared/error_messages' %>

				<%= u.text_field :name, :placeholder => 'Name', :id => "form-name", :class => "form-control", :autofocus => true, :required => true %>

				<!-- <%= u.label :email %> -->
				<%= u.text_field :email, :placeholder => 'Email', :id => "form-email", :class => "form-control", :required => true %>

				<!-- <%= u.label :password %> -->
				<%= u.password_field :password, :placeholder => 'Password', :id => "form-pass", :class => "form-control", :required => true %>

				<!-- <%= u.label :password_confirmation, "Confirmation" %> -->
				<%= u.password_field :password_confirmation, :placeholder => 'Confirmation', :id => "form-confirm", :class => "form-control", :required => true %>

				<%= u.submit "Create Account", class: "btn btn-lg btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
