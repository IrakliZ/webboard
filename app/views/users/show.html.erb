<% provide(:title, @user.name) %>
<div class="row">
	<%= image_tag "http://www.gravatar.com/avatar/" + Digest::MD5.hexdigest(@user.email).to_s + ".jpg", {id: "gravatar"} %>
	<h3 id="gravatar"><%= @user.name %></h3>
</div>
<% if current_user?(@user) %>
    <%= render 'boards/new' %>
<% end %>
<div class="row">
	<% if @user.boards.any? %>
		<h3>Boards (<%= @user.boards.count %>)</h3>
        <%= will_paginate @boards, renderer: BootstrapPagination::Rails %>
		<ol class="list-group">
			<%= render @boards %>
		</ol>
		<%= will_paginate @boards, renderer: BootstrapPagination::Rails %>
	<% end %>

</div>